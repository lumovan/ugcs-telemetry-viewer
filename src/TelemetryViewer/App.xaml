<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UGCS.TelemetryViewer"
             x:Class="UGCS.TelemetryViewer.TelemetryViewerApp">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
    </Application.Styles>
  <Application.Resources>
    <SolidColorBrush x:Key="ThemeBackgroundBrush">#262D33</SolidColorBrush>
    <SolidColorBrush x:Key="ThemeBackgroundTransparentBrush" Color="#000000" Opacity="0.6"/>
    <SolidColorBrush x:Key="ThemeBorderMidBrush">#727272</SolidColorBrush>
    <SolidColorBrush x:Key="ThemeBorderHighBrush">#FFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="ThemeControlMidBrush">#76b82a</SolidColorBrush>
    <SolidColorBrush x:Key="ThemeControlHighBrush">#FFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="HeaderColor">#FFFFFF</SolidColorBrush>
  </Application.Resources>
</Application>
